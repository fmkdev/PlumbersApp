</head>

<body>
    <header>      
  <div class="container-fluid">
    <center><a class="logo navbar-brand"><img style="height:100px; width: 100px; border-radius:50%; margin-bottom: 80px" src="~/myImage/logo-2.jpg"></a></center>
  </div>
 
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">PlumbingService</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <div class="collapse navbar-collapse mr-3 " id="navbarNav">
                    <ul class="navbar-nav">

                        <!--@if (User != null && User.Identity.IsAuthenticated)
                        {

                        <li class="nav-item active mr-3 float-right">
                            <a class="nav-link text-success" asp-action="Profile"><i class="fas fa-user"></i>@Context.User.Identity.Name</a>
                        </li>
                        <li class="nav-item mr-3 float-right">
                            <a class="nav-link text-success  mr-3" asp-area="" asp-controller="Admin" asp-action="Logout"><i class="fas fa-user"></i> Logout</a>
                        </li>
                        }
                        else
                        {
                        <a class="nav-link text-success  mr-3" asp-area="" asp-controller="Admin" asp-action="Login"><i class="fas fa-user"></i>Login</a>
                        } -->
</div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="height: auto;">
        <div class="container">
            &copy; 2022 - PlumbingService - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
