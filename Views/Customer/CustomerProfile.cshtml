@model PlumbingService.DTOs.CustomerDTO

@{
    Layout = "_CustomerLayout";
    ViewData["Title"] = "Customer";
}


<div class="pf-cont">
    <div class="photo">
        <div><img class="card-img" style="height:200px; width:200px; border-radius:50%" src="~/CustomerImages/@Model.CustomerPhoto" /></div>
    </div>
     <div class="datas">
        <table>
            <tr>
                <th>First Name</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Phone Number</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>@Model.Address</td>
            </tr>
        </table>
    </div> 
    <div class="form-group ">
            <button class="btn"><a asp-action="Index">Back To Home</a></button>
    </div>
</div>