@{
    Layout = "_PlumberLayout";
}

@model PlumbingService.DTOs.PlumberReportModel

<div class="bg-light">
    <h1 class="tagcolor" style="color:mediumblue">MAKE A REPORT</h1>
    <p class="tagcolor" style="color:mediumblue">Note: Making a report on a particular job you've done is very important. 
        <br>If not done it will taken as act of neglegence.</p>
    <hr class="tagcolor" style="color:mediumblue">

</div>

<form asp-controller="Plumber" asp-action="SubmitReport">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-row">
        <div class="form-group col-sm-6">
            <label asp-for="PReport" class="control-label"></label>
            <input asp-for="PReport" class="form-control" />
            <span asp-validation-for="PReport" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group ">
        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12"
            data-toggle="modal" />
    </div>
</form>