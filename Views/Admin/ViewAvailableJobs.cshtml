@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Admin";
}

@model IEnumerable<PlumbingService.DTOs.JobDTO>


<div class="form-row">
    @foreach (var job in Model)
    {

        <div class="card" style="width: 18rem;">
            <img style="border-radius: 30%;" src="~/myImage/banner2.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <div class="smallSizeCard">
                    <b>@Html.DisplayFor(data => job.CreationTime)</b>
                    <b>@Html.DisplayFor(data => job.JobReference)</b>
                    <b>@Html.DisplayFor(data => job.JobStatus)</b>
                    <b>@Html.DisplayFor(data => job.JobType)</b>
                    <p class="card-text">@Html.DisplayFor(data => job.Description)</p>
                    <a asp-action="UpdateJobStatus" asp-controller="Admin" asp-route-id="@job.Id"
                    class="btn btn-primary">Assign Job</a>
                </div>
            </div>
        </div>
    }
</div>